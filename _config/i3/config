#bindsym $mod+d exec --no-startup-id i3-dmenu-desktop
bindsym $mod+Shift+d exec --no-startup-id j4-dmenu-desktop --dmenu="dmenu -fn 'DejaVu Sans Mono-9'"
bindsym $mod+d exec --no-startup-id dmenu_run -fn 'DejaVu Sans Mono-9'
bindsym $mod+z exec --no-startup-id rofi -show run -font "Monospace 9" -fake_transparency
bindsym $mod+Shift+z exec --no-startup-id rofi -show drun -font "Monospace 9" -fake_transparency

