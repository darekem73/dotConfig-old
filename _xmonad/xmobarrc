            , Run Memory ["-t","Mem: <usedratio>%"] 10
	    , Run Swap [] 10
	    , Run DiskU [("/", "<free>/<size>"), ("sda6", "<free>/<size>")]
                        ["-L", "20", "-H", "50", "-m", "1", "-p", "3"]
                        20
            , Run Date "%a %Y-%m-%d %H:%M" "date" 10
            , Run StdinReader
	    , Run Battery    [ "--template" , "Batt: <acstatus>"
                             , "--Low"      , "10"        -- units: %
                             , "--High"     , "80"        -- units: %
                             , "--low"      , "darkred"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkgreen"

                             , "--" -- battery specific options
                                       -- discharging status
                                       , "-o"	, "<left>% (<timeleft>)"
                                       -- AC "on" status
                                       , "-O"	, "<fc=#dAA520>Charging</fc>"
                                       -- charged status
                                       , "-i"	, "<fc=#006000>Charged</fc>"
                             ] 50
            -- , Run Volume "default" "Master" [] 10
            -- , Run Com "dcop" ["kxkb", "kxkb", "getCurrentLayout"] "kbd" 20
	    , Run Com "gwaddress" [] "gw" 2
	    , Run Com "netdiag.sh" [] "net" 2
        ]
        , sepChar = "%"
        , alignSep = "}{"
