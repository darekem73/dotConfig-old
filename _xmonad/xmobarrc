            Run Wireless "wlan0" ["-t", "<essid> <quality>", "-L", "30", "-H", "70",
              "-l", "red", "-n","yellow", "-h", "green"] 10
            , Run Cpu ["-t","Cpu: <total>","-L","3","-H","50","--normal",
                "green","--high","red"] 10
            -- , Run CpuFreq ["-t","Freq: <cpu0>/<cpu1> GHz","-L","0","-H","2"
